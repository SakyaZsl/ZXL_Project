<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/common_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_common_head"/>

    <LinearLayout
        android:layout_margin="15dp"
        android:background="@drawable/shape_common_item_bg"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvProblemName"
            android:textSize="@dimen/text_size_xxl"
            android:textColor="@color/text_color_b"
            android:text="这个是问题描述"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvProblemTime"
            android:text="2020-22-22"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/text_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


       <ImageView
           android:visibility="gone"
           android:id="@+id/ivShowProblem"
           android:layout_marginTop="30dp"
           android:layout_width="80dp"
           android:layout_height="80dp"/>

        <TextView
            android:id="@+id/tvOurAnswer"
            android:text="哈哈哈哈哈哈哈"
            android:paddingLeft="9dp"
            android:paddingTop="12dp"
            android:paddingRight="9dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="40dp"
            android:gravity="left|top"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_l"
            android:background="@color/bg_our_answer"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>


    </LinearLayout>


</LinearLayout>