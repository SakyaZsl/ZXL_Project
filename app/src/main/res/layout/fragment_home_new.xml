<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llGetGoods"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="12dp"
        android:padding="15dp"
        android:background="@drawable/shape_common_item_bg"
        android:orientation="horizontal">


        <ImageView
            android:src="@drawable/icon_goods_get"
            android:layout_width="160dp"
            android:layout_height="160dp"
            />

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="取物品"/>
    </LinearLayout>



    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/llGetGoods"
        android:id="@+id/llBackGoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="12dp"
        android:padding="15dp"
        android:background="@drawable/shape_common_item_bg"
        android:orientation="horizontal">


        <ImageView
            android:src="@drawable/icon_goods_back"
            android:layout_width="160dp"
            android:layout_height="160dp"
            />

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="还物品"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>